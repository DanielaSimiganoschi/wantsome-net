@model RecipesApp.Models.FilterRecipesViewModel
@{
    ViewBag.Title = "Create Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filter Recipes</h1>

<div>
    @using (Html.BeginForm("Filter", "Recipe", FormMethod.Post))
    {
        <label>Categories</label>
        for (int i = 0; i < Model.Categories.Count; i++)
        {
            <div class="form-group">
                @Html.CheckBoxFor(x => Model.Categories[i].IsSelected)
                @Html.DisplayFor(x => Model.Categories[i].Name)
                @Html.HiddenFor(x => Model.Categories[i].CategoryID)
            </div>
        }

        <label>Subcategories</label>
        for (int i = 0; i < Model.Subcategories.Count; i++)
        {
            <div class="form-group">
                @Html.CheckBoxFor(x => Model.Subcategories[i].IsSelected)
                @Html.DisplayFor(x => Model.Subcategories[i].Name)
                @Html.HiddenFor(x => Model.Subcategories[i].SubcategoryID)
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
     

        <input type="submit" value="Generate results" />
    }
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")}