@model RecipesApp.Models.InstructionsListViewModel
@{
    ViewBag.Title = "Add Instructions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Ingredients</h1>

<div>
    @using (Html.BeginForm("Add", "Instructions", FormMethod.Post, new { id = "form" }))
    {

        for (int i = 0; i < Model.NrOfInstructions; i++)
        {
            <div class="form-group">
                <label>Instruction @i</label>
                @Html.EditorFor(model => model.ListOfInstructions[i].InstructionText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ListOfInstructions[i].InstructionText, "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(model => model.RecipeID, new { htmlAttributes = new { @class = "form-control" } })
        }

        <input type="submit" value="Save Instructions" />
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")}