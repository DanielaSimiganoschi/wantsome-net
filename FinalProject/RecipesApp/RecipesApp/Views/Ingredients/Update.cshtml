@model RecipesApp.Models.IngredientListViewModel
@{
    ViewBag.Title = "Add Ingredients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Ingredients</h1>

<div>
    @using (Html.BeginForm("Update", "Ingredients", FormMethod.Post, new { id = "form" }))
    {

        for (int i = 0; i < Model.ListIngredients.Count; i++)
        {
            

        <div class="form-group">
            @Html.LabelFor(model => model.ListIngredients[i].Name)
            @Html.EditorFor(model => model.ListIngredients[i].Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ListIngredients[i].Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ListIngredients[i].Quantity)
            @Html.EditorFor(model => model.ListIngredients[i].Quantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ListIngredients[i].Quantity, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(model => model.RecipeID, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.NrOfInstructions, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.ListIngredients[i].IngredientID)
        @Html.HiddenFor(model => model.ListIngredients[i].IngredientRecipeID)
    }

    <input type="submit" value="Save Ingredient" />
}
</div>

@section Scripts{
    
<script type="text/javascript">



</script>
    }